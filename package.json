{
  "name": "star-wars-api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "./node_modules/.bin/babel src --out-dir dist",
    "start": "npm run build && nodemon dist/server.js",
    "start:dev": "DEBUG=star-wars-api:* nodemon babel-node ./src/server.js",
    "test:integration": "NODE_ENV=test mocha --opts tests/integration/mocha.opts tests/integration/**/*.spec.js --exit",
    "test:unit": "NODE_ENV=test mocha --opts tests/unit/mocha.opts tests/unit/**/*.spec.js",
    "test": "npm run test:unit && npm run test:integration",
    "docs": "./node_modules/.bin/jsdoc -d docs src/**/*.js"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cookie-parser": "~1.4.3",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "express": "~4.16.0",
    "helmet": "^3.21.2",
    "http-errors": "~1.6.2",
    "mongoose": "^5.9.1",
    "morgan": "~1.9.0",
    "node-fetch": "^2.6.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/node": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "babel-eslint": "^10.0.3",
    "chai": "^4.2.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "jsdoc": "^3.6.3",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.2",
    "sinon": "^8.1.1",
    "supertest": "^4.0.2"
  }
}
